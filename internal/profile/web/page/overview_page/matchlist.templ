package overview_page

import (
	"context"
	"github.com/rank1zen/kevin/internal/frontend"
	"github.com/rank1zen/kevin/internal/profile/web/partial/history_entry"
	"github.com/rank1zen/kevin/internal/riot"
	"time"
)

type matchlistData struct {
	PUUID  riot.PUUID
	Region riot.Region
}

templ matchlist(ctx context.Context, data matchlistData) {
	<div class="flex-1">
		{{ days := frontend.GetDays(time.Now()) }}
		for _ = range len(days) - 1 {
			<div class="">
				<h5 class="font-medium text-lg text-heading mt-8 mb-4">
					Mar 25
				</h5>
				@history_entry.Loader(ctx, &history_entry.LoaderData{})
			</div>
		}
	</div>
}
