package match_card

import (
	"context"
	"fmt"
	"github.com/rank1zen/kevin/internal/frontend/view/shared"
)

type championWidgetData struct {
	ChampionID    int
	ChampionLevel int
	SummonerIDs   [2]int
}

templ championWidget(ctx context.Context, data championWidgetData) {
	<div class="flex flex-none gap-x-0.5 items-center">
		<div class="relative">
			@shared.ChampionSprite(ctx, shared.ChampionSpriteData{
				ChampionID: data.ChampionID,
				Size:       1,
			})
			<span class="right-0 bottom-0 size-4 text-xs absolute text-white text-center font-medium">
				{ fmt.Sprintf("%d", data.ChampionLevel) }
			</span>
		</div>
		<div class="flex flex-col gap-y-0.5">
			for _, id := range data.SummonerIDs {
				@shared.SummonerSpellSprite(ctx, shared.SummonerSpellSpriteData{
					SummonerID: id,
				})
			}
		</div>
	</div>
}
