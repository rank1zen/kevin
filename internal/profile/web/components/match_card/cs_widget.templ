package match_card

import (
	"context"
	"fmt"
)

type csWidgetData struct {
	CS          int
	CSPerMinute float32
}

templ csWidget(ctx context.Context, data csWidgetData) {
	<div class="h-9 w-15">
		<div class="font-semibold text-sm text-gray-900/90 dark:text-gray-100/90">
			{ fmt.Sprintf("%d CS", data.CS) }
		</div>
		<div class="text-xs text-gray-900/90 dark:text-gray-100/90">
			{ fmt.Sprintf("%.1f", data.CSPerMinute) }
		</div>
	</div>
}
