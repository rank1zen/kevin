package component

import "context"

// Section displays a heading with some content.
type Section struct {
	// NOTE: Heading can be changed for more complex api if needed.
	Heading string

	Content Component
}

templ (m Section) ToTempl(ctx context.Context) {
	<div>
		<h2 class="font-bold text-gray-900/90 dark:text-gray-100/90">
			{ m.Heading }
		</h2>
		<div class="mt-3">
			@m.Content.ToTempl(ctx)
		</div>
	</div>
}
