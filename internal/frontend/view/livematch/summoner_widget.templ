package livematch

import (
	"context"
	"github.com/rank1zen/kevin/internal"
	"github.com/rank1zen/kevin/internal/frontend/view/shared"
)

type SummonerWidgetData struct {
	Name, Tag string
	Rank      *internal.Rank
}

templ SummonerWidget(ctx context.Context, data SummonerWidgetData) {
	<div class="">
		<div class="flex-1 min-w-0">
			<div class="font-semibold text-gray-900/90 whitespace-nowrap truncate dark:text-gray-100/90">
				{ data.Name + "#" + data.Tag }
			</div>
			@shared.RankTag(ctx, shared.RankTagData{
				Rank: *data.Rank,
			})
		</div>
	</div>
}
