package shared

import (
	"context"
	"fmt"
)

type ErrorData struct {
	StatusCode int
	Header     string
	Message    string
}

templ Error(ctx context.Context, data ErrorData) {
	<main>
		<div class="text-lg">
			{ fmt.Sprintf("%d", data.StatusCode) }
		</div>
		<div class="text-xl">
			{ data.Header }
		</div>
		<p>
			{ data.Message }
		</p>
	</main>
}
